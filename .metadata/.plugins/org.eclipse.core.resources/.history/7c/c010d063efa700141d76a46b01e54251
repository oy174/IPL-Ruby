require 'math'

module ZOrder
  Background, FloatingObjects, Player, UI = *0..3
end

class FloatingObject	
	def initialize(window)
		@image = Gosu::Image(window, "../img/Ship.png", false)
		@x = @y = @angle = rand(640), rand(240), rand(360)
		@color = Gosu::Color.new(0xff000000)
		@color.red  = rand(256 - 40) + 40
		@color.green  = rand(256 - 40) + 40
		@color.blue  = rand(256 - 40) + 40
	end
	
	def draw
		image.draw_rot(@x, @y, 1, @angle)
	end
	
	def move
		@x += @speed_modifer*Math.sin(Math::PI/180*@angle)
		@y += -@speed_modifer*Math.cos(Math::PI/180*@angle)
		@x %= 1920
		@y %= 1080
	end
end