require 'rubygems'
require 'gosu'

=begin
This sets up the the window
=end
class GameWindow < Gosu::Window
	def initialize
		super 800, 600, false
		self.caption = "Tera's Termination"
		
		## seting up background
		@background_image = Gosu::Image.new(self, "../img/Darkness.png", true)
	end
	
	def update
	end
	
	def draw
		@background_image.draw(0, 0, 0)
	end
end

window = GameWindow.new
window.show

## Character creation
class Player
	def initialize(window)
	@image = Gosu::Image.new(window, "../img/Ship.png, false)
		@x = @y = @vel_x = @vel_y = @angle = 0.0
		@score = 0
	end
	
	def warp (x, y)
		@x, @y = x, y
	end
	
	def turn_right
		@angle += 4.5
	end
	
	def accelerate
		@vel_x += Gosu::offset_x(@angle, 0.5)
		@vel_y += Gosu::offset_y(@angle, 0.5)
	end
	
	def move
		@x += @vel_x
		@y += @vel_y
		@x %= 800
		@y %= 600
		
		@vel_x *= 0.95
		@vel_y *= 0.95
	end
	
	def draw
		@image.draw_rot(@x, @y, 1, @angle)
	end
end